{
  "manifest_version": 3,
  "name": "LeetCode GIF Reactions",
  "version": "1.1",
  "description": "Celebrating your LeetCode Accepted verdicts with custom GIFs!",
  "permissions": ["storage"],
  "host_permissions": ["https://leetcode.com/*"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*"],
      "js": ["src/content/index.tsx"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}